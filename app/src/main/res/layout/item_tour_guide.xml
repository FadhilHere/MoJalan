<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/tour_guide_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/galih"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tour_guide_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Galih M Zimran"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tour_guide_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="★★★★★"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/tour_guide_tag_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alam"
                    android:textSize="12sp"
                    android:background="@drawable/tag_background"
                    android:padding="4dp"
                    android:layout_marginEnd="4dp"
                    android:textColor="#FFFFFF" /> <!-- Warna teks putih -->

                <TextView
                    android:id="@+id/tour_guide_tag_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kota"
                    android:textSize="12sp"
                    android:background="@drawable/tag_background"
                    android:padding="4dp"
                    android:textColor="#FFFFFF" /> <!-- Warna teks putih -->

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tour_guide_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tangerang"
            android:textSize="12sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
