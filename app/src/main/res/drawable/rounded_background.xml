<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Warna background -->
    <solid android:color="#FFFFFF" />

    <!-- Sudut rounded -->
    <corners android:radius="16dp" />

    <!-- Padding (opsional) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

    <!-- Elevasi (opsional) -->
    <shadow
        android:color="#000000"
        android:radius="4dp"
        android:dx="0dp"
        android:dy="2dp" />
</shape>
